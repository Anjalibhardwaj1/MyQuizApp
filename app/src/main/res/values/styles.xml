<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#89cff0</item>
        <item name="colorPrimaryDark">#89bdf0</item>
        <item name="colorAccent">#f089ad</item>
    </style>

    <!-- Heading. -->
    <style name="Heading">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Android Developer Quiz</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#808080</item>

    </style>

    <!-- Question Heading -->
    <style name="Question_Header">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#89cff0</item>

    </style>

    <!--Question Text-->
    <style name="Question_Body">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">italic</item>

    </style>

    <!--Answer Text-->
    <style name="Answer_Text">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>

    <!--CheckBox Design-->
    <style name="Checkbox_Design">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

    <!--Radio Button Design-->
    <style name="Radio_Button_Design">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

    <!--Text Field Design-->
    <style name="Text_Field_Design">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">Write your answer here!</item>

    </style>

    <!--Button Design-->

    <style name="Button_Design">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Submit</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#89bdf0</item>

    </style>

</resources>
